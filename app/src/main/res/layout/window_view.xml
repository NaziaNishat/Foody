<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="400dp"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/winVImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/user64"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp">

            <TextView
                android:id="@+id/winVName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/user1"
                android:text="Name"
                android:textColor="@color/holo_red_dark"
                android:textSize="20dp"/>


            <ImageView
                android:id="@+id/winVCallImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/winVName"
                android:layout_marginTop="5dp"
                android:src="@drawable/telephone"/>

            <TextView
                android:id="@+id/winVNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/winVName"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:text="Contact Number"
                android:textColor="@color/holo_red_dark"
                android:textSize="20dp"/>


            <TextView
                android:id="@+id/winVGrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/winVNumber"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/drop"
                android:text="Blood Group"
                android:textSize="20dp"
                android:textColor="@color/holo_red_dark"/>
            <TextView
                android:id="@+id/winVAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/winVGrp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ageimg"
                android:text="Age"
                android:textSize="20dp"
                android:textColor="@color/holo_red_dark"/>

            <TextView
                android:id="@+id/winVLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/winVAge"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/address1"
                android:text="Address"
                android:textSize="20dp"
                android:textColor="@color/holo_red_dark"/>

            <TextView
                android:id="@+id/winVStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/winVLoc"
                android:layout_marginTop="5dp"
                android:text="Status: "
                android:textColor="@color/holo_red_dark"
                android:textSize="25dp"/>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>