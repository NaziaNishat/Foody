<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white"
    android:padding="15dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/listName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/user1"
            android:text="Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/holo_red_dark"/>

        <TextView
            android:id="@+id/listEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listName"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/gmail1"
            android:text="E-mail"
            android:textColor="@color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/listNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listEmail"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/telephone"
            android:text="Contact Number"
            android:textStyle="bold"
            android:textColor="@color/holo_red_dark"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/listGrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listNumber"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/drop"
            android:text="Blood Group"
            android:textColor="@color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/listAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listGrp"
            android:drawableLeft="@drawable/bloodbag"
            android:layout_marginTop="5dp"
            android:text="Amount"
            android:textSize="20dp"
            android:textColor="@color/holo_red_dark"
            android:textStyle="bold"/>


    </RelativeLayout>

</RelativeLayout>

