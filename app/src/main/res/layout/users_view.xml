<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/usersView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:padding="15dp"
    android:background="@color/white">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/user64"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/userListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/user1"
            android:text="Name"
            android:textSize="20dp"
            android:textColor="@color/holo_red_dark"/>


        <ImageView
            android:id="@+id/callImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userListName"
            android:layout_marginTop="5dp"
            android:src="@drawable/telephone"/>

        <TextView
            android:id="@+id/userListNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userListName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:text="Contact Number"
            android:textSize="20dp"
            android:textColor="@color/holo_red_dark"/>


        <TextView
            android:id="@+id/userListGrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userListNumber"
            android:drawableLeft="@drawable/drop"
            android:layout_marginTop="5dp"
            android:text="Blood Group"
            android:textSize="20dp"
            android:textColor="@color/holo_red_dark"/>
        <TextView
            android:id="@+id/userListAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userListGrp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ageimg"
            android:text="Age"
            android:textSize="20dp"
            android:textColor="@color/holo_red_dark"/>

        <TextView
            android:id="@+id/userListLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userListAge"
            android:drawableLeft="@drawable/address1"
            android:layout_marginTop="5dp"
            android:text="Address"
            android:textSize="20dp"
            android:textColor="@color/holo_red_dark"/>

            <TextView
                android:id="@+id/userListStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userListLoc"
                android:layout_marginTop="5dp"
                android:text="Status : "
                android:textSize="25dp"
                android:textColor="@color/holo_red_dark"/>

        </RelativeLayout>



    </LinearLayout>


</LinearLayout>